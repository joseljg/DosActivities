<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_boton1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="irActivity2"
        android:text="Ir a activity2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_uri1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="Escribe una direccion web"
        android:inputType="textUri"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_boton1" />

    <Button
        android:id="@+id/bt_boton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="irActivity2Boton2"
        android:text="Ir a Activity2 mandando url"
        app:layout_constraintEnd_toEndOf="@+id/edt_uri1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_uri1"
        app:layout_constraintTop_toBottomOf="@+id/edt_uri1" />

    <EditText
        android:id="@+id/edt_ciudad"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="Escribe nombre ciudad"
        android:inputType="textUri"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_boton2" />

    <EditText
        android:id="@+id/edt_habitantes"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="nÃºmero de habitantes"
        android:inputType="textUri"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_ciudad" />

    <Button
        android:id="@+id/bt_boton3"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="irActivity2boton3"
        android:text="Ir a Activity2 con varios extras"
        app:layout_constraintEnd_toEndOf="@+id/edt_habitantes"
        app:layout_constraintStart_toStartOf="@+id/edt_habitantes"
        app:layout_constraintTop_toBottomOf="@+id/edt_habitantes" />

    <Button
        android:id="@+id/bt_boton4"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:onClick="irActivity2boton4"
        android:text="Ir a Activity2 con un bundle"
        app:layout_constraintStart_toStartOf="@+id/bt_boton3"
        app:layout_constraintTop_toBottomOf="@+id/bt_boton3" />


</androidx.constraintlayout.widget.ConstraintLayout>